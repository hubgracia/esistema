@model List<isistema.Models.hora>


<div class="card">
    @using (Html.BeginForm())
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Alterar Dias</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       
        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary active">
                <input type="checkbox" checked ng-model="model.dia" ng-true-value="'1'" ngFalseValue="'0'" ng-checked="'1'" /> Seg
            </label>
            <label class="btn btn-primary">
                <input type="checkbox" checked ng-model="model.dia" ng-true-value="'2'" ngFalseValue="'0'" ng-checked="'2'" /> Seg
            </label>
            <label class="btn btn-primary">
                <input type="checkbox"> Qua
            </label>
            <label class="btn btn-primary">
                <input type="checkbox"> Qui
            </label>
            <label class="btn btn-primary">
                <input type="checkbox"> Sex
            </label>
            <label class="btn btn-primary">
                <input type="checkbox"> Sab
            </label>
            <label class="btn btn-primary">
                <input type="checkbox"> Dom e Feriado
            </label>
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model[0].abre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model[0].abre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model[0].abre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model[0].fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model[0].fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model[0].fecha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="save" onclick="JSON" type="submit" value="Alterar valores" class="btn btn-default" />
            </div>
        </div>

    </div>
        }
    </div>
<div>
    @Html.ActionLink("Voltar ao menu de horas", "MenuHoras", new { id = ViewBag.restid })
</div>




